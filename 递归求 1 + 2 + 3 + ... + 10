public class test {
    public static int fac(int n){
        if(n==1){
            return 1;
        }
        return n+fac(n-1);
    }
    public static void main(String[] args) {
        //递归求 1 + 2 + 3 + ... + 10
        int n=10;
        int ret=fac(n);
        System.out.println(ret);
    }
}
